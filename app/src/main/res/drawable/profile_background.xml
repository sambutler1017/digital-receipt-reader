<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="@color/blue_300"
                android:endColor="@color/blue_100"
                android:angle="180"/>
            <padding android:bottom="1dp"/>
        </shape>
    </item>
    <item android:left="-240dp" android:top="90dp" android:bottom="-80dp" android:right="20dp">
        <rotate
            android:fromDegrees="-30"
            android:pivotX="50%"
            android:pivotY="50%" >
            <shape
                android:shape="oval">
                <solid android:color="@color/white" />
                <padding android:bottom="1dp"/>
            </shape>
        </rotate>
    </item>
    <item android:left="120dp" android:top="110dp" android:bottom="-100dp" android:right="-160dp">
        <shape
            android:shape="oval">
            <solid android:color="@color/white" />
            <padding android:bottom="1dp"/>
        </shape>
    </item>
</layer-list>